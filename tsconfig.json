{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "dist",
    "tests"
  ]
}
